<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Raspberry Pi - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!--Custom navbar-->
    <div class="container">
        <div class="nav-padding">
            <!--TODO GET THIS WORKING LINKS BACK TO HOMEPAGE-->
            <!--TODO NOT FLOATING ALL THE WAY LEFT!-->
            <div id="nav-div-left">
                <ul>
                    <!--Brand Button linking back to homepage-->
                    <li><a href='@Html.ActionLink("Index", "Home", new { area = "" }, new { @class = "navbar-brand" })'><img src="~/Content/imageFolder/HomeICON.png" /></a></li>
                    <!--Catagories dropdown button-->
                    <li>
                        <div class="dropdown">
                            <button class="my-btn dropdown-toggle" type="button" data-toggle="dropdown">
                                Catagories
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Build a Bundle</a></li>
                                <li><a href="#">Bundles</a></li>
                                <li><a href="#">Raspberry Pi's</a></li>
                                <li><a href="#">Chargers</a></li>
                                <li><a href="#">SD Cards</a></li>
                                <li><a href="#">Wireless</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <!--Accounts dropdown button-->
                        <div class="dropdown">
                            <button class="my-btn dropdown-toggle" type="button" data-toggle="dropdown">
                                Accounts
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                            </ul>
                        </div>
                    </li>
                </ul>       
            </div>
            <div class="clearfix"></div>
        </div>

        <!--Render rest of body outside of navbar-->
        <div class="body-content">
            @RenderBody()
            <hr />
            <!--Keeps track of year displays website name-->
            <footer>
                <p class="text-center">&copy; @DateTime.Now.Year - Raspberry Pi</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
