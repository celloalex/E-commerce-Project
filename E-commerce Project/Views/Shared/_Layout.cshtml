<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Raspberry Pi - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="navbar navbar-inverse navbar-static-top">
            <div >
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Raspberry Pi", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @* TODO tabs to different pages *@
                    </ul>
                    @* This may need to be removed later to put in my own login information *@
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <!--THIS IS THE NEW NAVBAR I AM TRYING TO REPLACE BORING BOOTSTRAP ONE-->
        <div id="nav-div-left">
            <ul>
                <li>Item 1</li>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        Dropdown Example
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">Build a Bundle</a></li>
                        <li><a href="#">Bundles</a></li>
                        <li><a href="#">Raspberry Pis</a></li>
                        <li><a href="#">Chargers</a></li>
                        <li><a href="#">SD Cards</a></li>
                        <li><a href="#">Wireless</a></li>
                    </ul>
                </div>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="body-content">
            @RenderBody()
            <hr />
            <footer>
                <p class="text-center">&copy; @DateTime.Now.Year - Raspberry Pi</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
